{
  "name": "repertoire-server",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn build-ts && yarn copy-static-assets",
    "build-ts": "tsc",
    "copy-static-assets": "copyfiles -u 3 \"src/db/data/**.*\" dist/db/data",
    "create-dump": "pg_dump repertoire > db/backups/dump.sql",
    "heroku-postbuild": "yarn build",
    "serve": "node dist/index.js",
    "start": "yarn serve",
    "start-server": "yarn watch",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "concurrently -k \"yarn watch-ts\" \"yarn watch-node\"",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "apollo-server-express": "^2.3.1",
    "bcrypt": "^3.0.2",
    "cors": "^2.8.5",
    "csv-parser": "^2.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "graphql": "^14.0.2",
    "graphql-iso-date": "^3.6.1",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "moment": "^2.23.0",
    "node-fetch": "^2.3.0",
    "nodemon": "^1.18.9",
    "pg": "^7.7.1",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/es6-shim": "^0.31.39",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "^0.0.40",
    "@types/graphql": "^14.0.3",
    "@types/graphql-iso-date": "^3.3.1",
    "@types/helmet": "^0.0.42",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/moment": "^2.13.0",
    "@types/node": "^10.12.18",
    "@types/node-fetch": "^2.1.4",
    "@types/pg": "^7.4.11",
    "@types/pg-format": "^1.0.0",
    "concurrently": "^4.1.0",
    "copyfiles": "^2.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2"
  },
  "engines": {
    "node": "8.11.4"
  }
}
